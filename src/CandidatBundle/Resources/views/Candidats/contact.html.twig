{% extends 'base.html.twig' %}

{% block body %}
<h1 class="my-4">
        <small>Send Email To: {{ candidat.nom }}{{ candidat.prenom }}</small>
</h1>
<form  action="{{ path('candidatsendemailpage',{'id':candidat.id}) }}" method="post">
  <div class="form-group">
    <label for="exampleFormControlInput1">Subject</label>
    <input type="text" class="form-control" name="subject" id="exampleFormControlInput1" placeholder="">
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Message</label>
    <textarea class="form-control" name="message" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>
  <input type="submit" class="btn btn-success" value="Send">
</form>
{% endblock %}